@model IEnumerable<string>
           
@Html.ActionLink("Todos os Produtos", "ListaProdutos","Vitrine",null ,new{@class="btn btn-block btn-default btn-large"})

@foreach (string link in Model)
{
    @Html.RouteLink(link,
            new { controller = "Vitrine", 
                action = "ListaProdutos",
                categoria = link,
                pagina=1},
            new
            {
                @class="btn btn-block btn-default btn-large"+
                (link == ViewBag.CategoriaSelecionada?" btn-primary selected":"")
            }
    )
}

